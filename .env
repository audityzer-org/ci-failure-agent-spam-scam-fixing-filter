#### TELEGRAM BOT CONFIGURATION (FROM STEP 1)
TELEGRAM_BOT_TOKEN=YOUR_BOT_TOKEN_FROM_BOTFATHER
TELEGRAM_BOT_USERNAME=your_bot_username
TELEGRAM_PUBLIC_CHANNEL_ID=-100123456789
TELEGRAM_WEBHOOK_URL=https://your-domain.com/webhook/telegram
TELEGRAM_API_URL=https://api.telegram.org

#### CLICKUP CONFIGURATION (FROM STEP 1-3)
CLICKUP_API_TOKEN=YOUR_CLICKUP_API_TOKEN
CLICKUP_WORKSPACE_ID=YOUR_WORKSPACE_ID
CLICKUP_TEAM_ID=YOUR_TEAM_ID
CLICKUP_API_URL=https://api.clickup.com/api/v2

#### DATABASE CONFIGURATION (FROM STEP 4 - PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=clickup_telegram_bot
DB_USER=postgres
DB_PASSWORD=YOUR_SECURE_PASSWORD
DB_SSL=false

#### SERVER CONFIGURATION (STEP 5)
NODE_ENV=development
PORT=3000
HOST=localhost
SERVER_URL=https://your-domain.com

#### LOGGING AND MONITORING
LOG_LEVEL=debug
LOG_FILE=./logs/app.log
DEBUG_MODE=true

#### SECURITY
SECRET_KEY=your_random_secret_key_here
ENCRYPTION_ENABLED=true
CORS_ORIGIN=*

#### FEATURE FLAGS
FEATURE_RICH_NOTIFICATIONS=true
FEATURE_TASK_SYNC=true
FEATURE_AUTO_TAGGING=true
MAX_RETRIES=3
RETRY_DELAY=5000

# ============================================
# INSTRUCTIONS TO FILL IN YOUR VALUES:
# ============================================
# 1. TELEGRAM_BOT_TOKEN: Get from BotFather (@BotFather on Telegram)
#    Command: /newbot then /mybots
#
# 2. CLICKUP_API_TOKEN: Get from ClickUp Settings
#    Path: Settings > Integrations > API > Create Token
#
# 3. CLICKUP_WORKSPACE_ID & TEAM_ID:
#    From ClickUp URL: clickup.com/a/YOUR_WORKSPACE_ID/
#
# 4. DB_PASSWORD: Use a strong password
#    PostgreSQL user: postgres (from Step 4)
#
# 5. SERVER_URL: Your domain (e.g., example.com)
#    Must be HTTPS for production webhooks
#
# 6. Replace all YOUR_* placeholders with actual values
# ============================================

